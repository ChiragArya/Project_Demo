<%= semantic_form_for @property do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :description, input_html: { rows: 10, cols: 25 }, hint: 'Make it a good one' %>
    <%= f.file_field :image %><br>
    <%= f.input :location %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :amenties, :as => :radio %>
    <%= f.input :facilities %>
    <%= f.input :date %>
    <%= f.input :price %>
    <%= f.input :services %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, :class => "primary" %>
  <% end %>
<% end %>
