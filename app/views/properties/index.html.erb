<p id="notice"><%= notice %></p>

<h1>Listing Properties</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Image</th>
      <th>Location</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Amenties</th>
      <th>Facilities</th>
      <th>Date</th>
      <th>Price</th>
      <th>Services</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <h1>Properties Finder</h1>
  <%= form_tag properties_path, :method => :get do %>
    <p>
      <%= text_field_tag :search, params[:search],:id => 'geo-input' %>
      <%= submit_tag "Search Near", :name => nil %>
    </p>
  <% end %>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.description %></td>
        <td><%= image_tag (property.image.url(:medium)) %></td>        
        <td><%= property.location %></td>
        <!-- <td><%= property.latitude %></td>
        <td><%= property.longitude %></td> -->
        <td><%= property.distance.round(2) %> miles</td>
        <td><%= property.amenties %></td>
        <td><%= property.facilities %></td>
        <td><%= property.date %></td>
        <td><%= property.price %></td>
        <td><%= property.services %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Property', new_property_path %>
